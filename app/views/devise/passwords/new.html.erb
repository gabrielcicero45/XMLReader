<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold text-center mb-6">Esqueceu a senha?</h1>
    <p class="text-gray-600 text-center mb-4">
      Insira seu e-mail para receber instruções de recuperação de senha.
    </p>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), local: true) do |f| %>
      <% if flash[:alert] %>
        <div class="bg-red-100 text-red-600 p-3 rounded-lg mb-4">
          <%= flash[:alert] %>
        </div>
      <% elsif flash[:notice] %>
        <div class="bg-green-100 text-green-600 p-3 rounded-lg mb-4">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "w-full p-3 border rounded-lg focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Enviar instruções", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 rounded-lg focus:outline-none focus:ring focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "Voltar ao login", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
